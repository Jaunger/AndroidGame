<!-- arrow_button_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Arrow shape with a right-pointing arrow -->
    <item>
        <rotate
            android:fromDegrees="-45"
            android:pivotX="100%"
            android:pivotY="50%">
            <path
                android:fillColor="#F44336"
                android:pathData="M0,0 L100,50 L0,100z" />
        </rotate>
    </item>

</shape>
