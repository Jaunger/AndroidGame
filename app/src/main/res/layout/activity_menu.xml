<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_centerInParent="true">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Le maple story"
        android:textSize="50sp"
        android:layout_marginBottom="125dp"
        android:gravity="center">


    </com.google.android.material.textview.MaterialTextView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menu_BTN_scoreboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#034CAF50"
        android:textColor="@color/black"
        android:layout_marginBottom="125dp"
        android:textSize="25sp"
        android:text="ScoreBoard">

    </com.google.android.material.button.MaterialButton>


    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Choose Control type"
        android:textSize="30sp"

        android:gravity="center">

    </com.google.android.material.textview.MaterialTextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/menu_BTN_sensors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#034CAF50"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:text="Sensors">

        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/menu_BTN_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#034CAF50"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:text="Buttons">

        </com.google.android.material.button.MaterialButton>



    </LinearLayout>


    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Speed"
        android:layout_marginTop="25dp"
        android:textSize="30sp"

        android:gravity="center">

    </com.google.android.material.textview.MaterialTextView>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/menu_BTN_slow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#034CAF50"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:text="Slow">

        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/menu_BTN_fast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#034CAF50"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:text="Fast">

        </com.google.android.material.button.MaterialButton>



    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menu_BTN_launch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#034CAF50"
        android:layout_marginTop="25dp"
        android:paddingTop="25dp"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:text="Launch Game">

    </com.google.android.material.button.MaterialButton>








</androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>